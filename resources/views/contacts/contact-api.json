{
    "swagger": "2.0",
    "info": {
      "version": "1.0.0",
      "title": "Contact API",
      "description": "CONTACT API"
    },
    "paths": {
      "/api/contacts": {
        "post": {
          "summary": "Create a new contact",
          "description": "Add a new contact to the address book",
          "parameters": [
            {
              "name": "first_name",
              "in": "formData",
              "description": "First name of the contact",
              "required": true,
              "type": "string"
            },
            {
              "name": "last_name",
              "in": "formData",
              "description": "Last name of the contact",
              "required": true,
              "type": "string"
            },
            {
              "name": "email",
              "in": "formData",
              "description": "Email address of the contact",
              "required": true,
              "type": "string"
            },
            {
              "name": "phone",
              "in": "formData",
              "description": "Phone number of the contact",
              "required": true,
              "type": "string"
            }
          ],
          "responses": {
            "200": {
              "description": "Contact created successfully"
            }
          }
        },
        "get": {
          "summary": "Get list of contacts",
          "description": "Retrieve a list of all contacts",
          "responses": {
            "200": {
              "description": "Contacts retrieved successfully"
            }
          }
        }
      },
      "/api/contacts/{id}": {
        "get": {
          "summary": "Get contact details",
          "description": "Retrieve details of a specific contact",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "description": "ID of the contact",
              "required": true,
              "type": "integer"
            }
          ],
          "responses": {
            "200": {
              "description": "Contact details retrieved successfully"
            }
          }
        },
        "put": {
          "summary": "Update contact details",
          "description": "Update details of a specific contact",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "description": "ID of the contact",
              "required": true,
              "type": "integer"
            },
            {
              "name": "first_name",
              "in": "formData",
              "description": "First name of the contact",
              "required": false,
              "type": "string"
            },
            {
              "name": "last_name",
              "in": "formData",
              "description": "Last name of the contact",
              "required": false,
              "type": "string"
            },
            {
              "name": "email",
              "in": "formData",
              "description": "Email address of the contact",
              "required": false,
              "type": "string"
            },
            {
              "name": "phone",
              "in": "formData",
              "description": "Phone number of the contact",
              "required": false,
              "type": "string"
            }
          ],
          "responses": {
            "200": {
              "description": "Contact details updated successfully"
            }
          }
        },
        "delete": {
          "summary": "Delete a contact",
          "description": "Remove a specific contact from the address book",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "description": "ID of the contact",
              "required": true,
              "type": "integer"
            }
          ],
          "responses": {
            "200": {
              "description": "Contact removed successfully"
            }
          }
        }
      }
    }
  }
  